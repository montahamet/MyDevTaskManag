@model STAGE._2023.TEST.Models.UserViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="card card-teal card-outline">
    <div class="card-header">
        <h2 class="card-title">ADD USER</h2>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Create" enctype="multipart/form-data">
        @*<div style="color:red; font-size:15px; text-align:center;"> @Html.ValidationMessageFor(m => m.Login)</div>*@
        @*<div style="color:red; font-size:15px; text-align:center;"> @Html.ValidationMessageFor(m => m.Email)</div>*@
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">

                <label asp-for="FullName" class="col-sm-2 col-form-label">Full Name :<span style=" color : red ; "> * </span></label>
                <div class="col-sm-10">
                    <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UserRoleId" class="col-sm-2 col-form-label">Role :</label>
                <div class="col-sm-10">
                    <select asp-for="UserRoleId" class="form-control" size="1"
                            asp-items="@(new SelectList(Model.UserRoles,"Id","Name"))">
                        <option id="0" value="0">-- select -- </option>
                    </select>
                    <span asp-validation-for="UserRoleId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label">Email: <span style=" color : red ; "> * </span></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Phone" class="col-sm-2 col-form-label">Phone Number :</label>
                <div class="col-sm-10">
                    <input asp-for="Phone" class="form-control" placeholder="Phone Number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="CreationDate" class="col-sm-2 col-form-label">Date of creation :</label>
                <div class="col-sm-10">
                    <input asp-for="CreationDate" class="form-control" placeholder="Date of Creation" type="date" value='@DateTime.Today.ToString()' />
                    <span asp-validation-for="CreationDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Login" class="col-sm-2 col-form-label">Login :<span style=" color : red ; "> * </span></label>
                <div class="col-sm-10">
                    <input asp-for="Login" class="form-control" placeholder="Login" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label">Password :<span style=" color : red ; "> * </span></label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BirthDate" class="col-sm-2 col-form-label">Date of Birth :</label>
                <div class="col-sm-10">
                    <input asp-for="BirthDate" class="form-control" placeholder="Date of Birth" type="date" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="File" class="col-sm-2 col-form-label">Image :</label>
                <div class="col-sm-10">
                    <input type="file" name="File" asp-for="File" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
        </div>
        <div class="card-footer">
            <button asp-action="Create" class="btn btn-info  float-right">Create</button>

            <button asp-action="Index" class="btn btn-danger "><i class="fas fa-arrow-left"></i> Back</button>
        </div>
        <!-- /.card-footer -->

    </form>
</div>
