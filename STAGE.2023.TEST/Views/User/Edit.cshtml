@model STAGE._2023.TEST.Models.UserViewModel

@{
    ViewData["Title"] = "Edit";
}


<div class="card card-teal card-outline">
    <div class="card-header">
        <h2 class="card-title">Edit User</h2>
        @*<a asp-controller="User" asp-action="Index" class="btn btn-default bg-teal float-right">Retour</a>*@
    </div>

    <form class="form-horizontal" asp-action="Edit" enctype="multipart/form-data">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group row">

            <label asp-for="FullName" class="col-sm-2 col-form-label">Prénom</label>
            <div class="col-sm-10">
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            </div>*@


            <div class="form-group row">
                <label asp-for="FullName" class="col-sm-2 col-form-label">Full Name : </label>
                <div class="col-sm-10">
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="UserRoleId" class="col-sm-2 col-form-label">Role :</label>
                <div class="col-sm-10">
                    <select asp-for="UserRoleId" class="form-control" size="1"
                            asp-items="@(new SelectList(Model.UserRoles,"Id","Name"))">

                        @if ((@Model != null) && (@Model.User.UserRole != null) && (@Model.User.UserRole.Name != null))
                        {
                            <option id="@Model.User.UserRole.Id" value="@Model.User.UserRole.Id">@Model.User.UserRole.Name</option>
                        }
                        else
                        {
                            <option id="0" value="0">-- select -- </option>
                        }
                    </select>
                    <span asp-validation-for="UserRoleId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Phone" class="col-sm-2 col-form-label">Phone Number :</label>
                <div class="col-sm-10">
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CreationDate" class="col-sm-2 col-form-label">Date of creation :</label>
                <div class="col-sm-10">
                    <input asp-for="CreationDate" class="form-control" type="date" />
                    <span asp-validation-for="CreationDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Login" class="col-sm-2 col-form-label">Login :</label>
                <div class="col-sm-10">
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label">Password :</label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BirthDate" class="col-sm-2 col-form-label">Date of Birth :</label>
                <div class="col-sm-10">
                    <input asp-for="BirthDate" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="File" class="col-sm-2 col-form-label">Image :</label>
                <div class="col-sm-10">
                    <input type="file" name="File" asp-for="File" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
                    <img class="img-fluid" src="~/uploads/@Model.ImageUrl" alt="Photo" width="100" height="600" />
                </div>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-info float-right" value="Edit">save</button>

                @*<button type="submit" class="btn btn-danger ">Cancel</button>*@
                <input type="button"
                       class="btn btn-danger  float-left"
                       value="Back"
                       onclick="location.href='@Url.Action("Index", "User")'" />

            </div>


        </div>

    </form>
</div>
