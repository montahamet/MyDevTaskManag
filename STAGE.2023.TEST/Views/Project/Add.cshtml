@model STAGE._2023.TEST.Models.ProjectViewModel

@{
    ViewData["Title"] = "Add";
}

<div class="card card-teal card-outline">

    <div class="card-header">
        <br />
        <h2 class="card-title">Add Project</h2>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Add" asp-controller="project">

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="project_name" class="col-sm-2 col-form-label"> Project Name:<span style=" color : red ; "> * </span> </label>
                <div class="col-sm-10">
                    <input asp-for="project_name" class="form-control" placeholder="Project" />
                    <span asp-validation-for="project_name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="project_module" class="col-sm-2 col-form-label">Module: <span style=" color : red ; "> * </span></label>
                <div class="col-sm-10">
                    <input asp-for="project_module" class="form-control" placeholder="Module" />
                    <span asp-validation-for="project_module" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="project_version" class="col-sm-2 col-form-label">Version : <span style=" color : red ; "> * </span></label>
                <div class="col-sm-10">
                    <input asp-for="project_version" class="form-control" placeholder="Version" />
                    <span asp-validation-for="project_version" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="id_StatusProject" class="col-sm-2 col-form-label">Status :</label>
                <div class="col-sm-10">
                    <select asp-for="id_StatusProject" class="form-control" size="1"
                            asp-items="@(Model.StatusProjects != null ? new SelectList(Model.StatusProjects, "id_StatusProject", "StatusProject_name") : null)">
                        <option id="0" value="0">-- select -- </option>
                    </select>
                    <span asp-validation-for="id_StatusProject" class="text-danger"></span>
                </div>
            </div>


            
            <div class="form-group row">
                <label asp-for="project_description" class="col-sm-2 col-form-label">Description :</label>
                <div class="col-sm-10">
                    <input asp-for="project_description" class="form-control" placeholder="Description" />
                    <span asp-validation-for="project_description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="project_leader" class="col-sm-2 col-form-label">Leader :</label>
                <div class="col-sm-10">
                    <input asp-for="project_leader" class="form-control" placeholder="Leader" />
                    <span asp-validation-for="project_leader" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="project_estimated_budget" class="col-sm-2 col-form-label">Estimated Budget :</label>
                <div class="col-sm-10">
                    <input asp-for="project_estimated_budget" class="form-control" placeholder="Bugdet" />
                    <span asp-validation-for="project_estimated_budget" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="project_total_amount" class="col-sm-2 col-form-label">Total Amount :</label>
                <div class="col-sm-10">
                    <input asp-for="project_total_amount" class="form-control" placeholder="Total" />
                    <span asp-validation-for="project_total_amount" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="project_estimated_duration" class="col-sm-2 col-form-label">Estimated Duration :</label>
                <div class="col-sm-10">
                    <input asp-for="project_estimated_duration" class="form-control" placeholder="Duration" />
                    <span asp-validation-for="project_estimated_duration" class="text-danger"></span>
                </div>
            </div>


            <button value="Add" type="submit" class="btn btn-success float-right"> <i class="fa fa-check"></i> Add</button>
            <a href="/Project/index" type="button" class="btn btn-dark"><i class="fas fa-arrow-left"></i> Cancel</a>
        </div>
    </form>
</div>
